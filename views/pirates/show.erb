<h1>Pirate</h1>
  <div class="pirate">
    <p><%=@pirate.name%></p>
    <p><%=@pirate.weight%></p>
    <p><%=@pirate.height%></p>
  </div>


<h1>Ships</h1>

<% @ships.each do |ship| %>
  <div class="ship">
    <p>Ship's name: <%= ship.name %></p>
    <p>Ship type: <%= ship.type %></p>
    <p>Ship's booty: <%= ship.booty %></p>
  </div><br>
<% end %>

